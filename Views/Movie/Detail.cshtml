@model MovieViewModel

<!-- Вывод информации о фильмах на текущей странице -->
@foreach (var movie in Model.Movies)
{
    <div class="film-card">
        <div class="film-details">
            <h2>@movie.name</h2>
            <!-- Добавьте другие детали фильма здесь -->
            <div class="film-details-content">
                @if (movie.poster != null && !string.IsNullOrEmpty(movie.poster.url))
                {
                    <img src="@movie.poster.url" alt="@movie.name" class="img-fluid" />
                }
                <div class="section">
                    <h3>Рейтинги:</h3>
                    <ul>
                        <li>КиноПоиск: @movie.rating.kp</li>
                        @if (movie.rating.imdb.HasValue)
                        {
                            <li>IMDb: @movie.rating.imdb</li>
                        }
                        @if (movie.rating.filmCritics.HasValue)
                        {
                            <li>Рейтинг критиков: @movie.rating.filmCritics</li>
                        }
                        @if (movie.rating.russianFilmCritics.HasValue)
                        {
                            <li>Рейтинг российских критиков: @movie.rating.russianFilmCritics</li>
                        }
                    </ul>
                </div>
                <div class="section">
                    <h2>Описание:</h2>
                    <p>@movie.description</p>
                </div>
                <div class="section">
                    <h3>Год:</h3>
                    <p>@movie.year</p>
                </div>
                <div class="section">
                    <h3>Продолжительность:</h3>
                    <p>@movie.movieLength минут</p>
                </div>
                <div class="section">
                    <h3>Тип:</h3>
                    <p>@movie.type</p>
                </div>
                <div class="section">
                    <h3>Жанры:</h3>
                    <ul>
                        @if (movie.genres != null)
                        {
                            @foreach (var genre in movie.genres)
                            {
                                <li>@genre.name</li>
                            }
                        }
                    </ul>
                </div>
                <div class="section">
                    <h3>Страна:</h3>
                    <ul>
                        @if (movie.countries != null)
                        {
                            @foreach (var country in movie.countries)
                            {
                                <li>@country.name</li>
                            }
                        }
                    </ul>
                </div>
                <div class="section">
                    <h3>Альтернативные названия:</h3>
                    <ul>
                        @if (movie.names != null)
                        {
                            @foreach (var name in movie.names)
                            {
                                <li>@name.name</li>
                            }
                        }
                    </ul>
                </div>
                <div class="section">
                    <h3>Краткое описание:</h3>
                    <p>@movie.shortDescription</p>
                </div>
            </div>
        </div>
        @if (@Model.UserIndex == 0)
        {
            <h2>Вы еще не давали оценку этому произведению</h2>
        }
        @if (@Model.UserIndex == 1)
        {
            <h2>Вы отметили данное произведение как понравившееся</h2>
        }
        @if (@Model.UserIndex == 2)
        {
            <h2>Данное произведение в вашем черном списке</h2>
        }
        @if (@Model.UserIndex == 3)
        {
            <h2>Вы поместили это произведение в список посмотреть позже</h2>
        }
        <a asp-controller="Recomendation" asp-action="AddToLiked" asp-route-id="@movie.externalId.kpHD" asp-route-name="@movie.name"
            class="btn btn-info">Добавить в любимое</a>
        <a asp-controller="Recomendation" asp-action="AddToDisliked" asp-route-id="@movie.externalId.kpHD" asp-route-name="@movie.name"
            class="btn btn-danger">Добавить в черный список</a>
        <a asp-controller="Recomendation" asp-action="AddToFutureList" asp-route-id="@movie.externalId.kpHD" asp-route-name="@movie.name"
            class="btn btn-success">Добавить в посмотреть позже</a>
        <a asp-controller="Recomendation" asp-action="SetDefault" asp-route-id="@movie.externalId.kpHD" asp-route-name="@movie.name"
            class="btn btn-secondary">Не оценивать</a>

    </div>
    <style>
        .section {
            border: 2px solid #000;
            padding: 10px;
            margin: 10px 0;
        }
    </style>
}
